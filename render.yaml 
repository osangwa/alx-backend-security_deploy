services:
  - type: web
    name: ip-tracking-web
    env: python
    plan: free
    buildCommand: |
      pip install -r requirements.txt
      python manage.py collectstatic --noinput
      python manage.py migrate
    startCommand: gunicorn your_project.wsgi:application
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: ip-tracking-db
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: DEBUG
        value: false
      - key: REDIS_URL
        fromService:
          name: ip-tracking-redis
          type: redis
          property: connectionString

  - type: worker
    name: celery-worker
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: celery -A your_project worker --loglevel=info
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: ip-tracking-db
          property: connectionString
      - key: SECRET_KEY
        fromService:
          name: ip-tracking-web
          type: web
          property: SECRET_KEY
      - key: REDIS_URL
        fromService:
          name: ip-tracking-redis
          type: redis
          property: connectionString

  - type: redis
    name: ip-tracking-redis
    plan: free

databases:
  - name: ip-tracking-db
    plan: free